<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - School Queue System</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <% if (typeof user !== 'undefined' && user) { %>
    <nav class="dashboard-nav">
        <div class="nav-brand">
            <i class="fas fa-school"></i>
            <span>School Queue System</span>
        </div>
        <div class="nav-links">
            <% if (user.role === 'student') { %>
                <a href="/student/dashboard" class="nav-link">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
                <a href="/student/queue" class="nav-link">
                    <i class="fas fa-users"></i> Join Queue
                </a>
                <a href="/student/history" class="nav-link">
                    <i class="fas fa-history"></i> History
                </a>
            <% } else if (user.role === 'admin') { %>
                <a href="/admin/dashboard" class="nav-link">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
                <a href="/admin/queue" class="nav-link">
                    <i class="fas fa-users-cog"></i> Manage Queue
                </a>
                <a href="/admin/reports" class="nav-link">
                    <i class="fas fa-chart-bar"></i> Reports
                </a>
                <a href="/admin/students" class="nav-link">
                    <i class="fas fa-user-graduate"></i> Students
                </a>
            <% } %>
            <div class="nav-user">
                <span>Welcome, <%= user.name %></span>
                <a href="/logout" class="btn btn-sm btn-danger">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </div>
    </nav>
    <% } %>

    <div class="container">
        <% if (typeof messages !== 'undefined' && messages) { %>
            <% if (messages.success) { %>
                <div class="alert alert-success">
                    <%= messages.success %>
                </div>
            <% } %>
            <% if (messages.error) { %>
                <div class="alert alert-danger">
                    <%= messages.error %>
                </div>
            <% } %>
            <% if (messages.warning) { %>
                <div class="alert alert-warning">
                    <%= messages.warning %>
                </div>
            <% } %>
        <% } %>

        <main class="main-content">
            <%- body %>
        </main>
    </div>

    <footer class="footer">
        <div class="footer-content">
            <p>&copy; 2024 School Queue System. All rights reserved.</p>
            <div class="footer-links">
                <a href="/privacy">Privacy Policy</a>
                <a href="/terms">Terms of Service</a>
                <a href="/support">Support</a>
            </div>
        </div>
    </footer>

    <script src="/js/main.js"></script>
    <% if (typeof additionalScripts !== 'undefined') { %>
        <% additionalScripts.forEach(script => { %>
            <script src="<%= script %>"></script>
        <% }); %>
    <% } %>
</body>
</html>